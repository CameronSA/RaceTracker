<Window x:Class="RaceTracker.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceTracker.Views"
        mc:Ignorable="d"
        Title="Race Tracker" Height="150" Width="450" Icon="../favicon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Loading. . ." HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="35"/>
        <ProgressBar Grid.Row="1" IsIndeterminate="True" Margin="10 10 10 10"/>
    </Grid>
</Window>
